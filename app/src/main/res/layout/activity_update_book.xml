<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBook">

    <EditText
        android:id="@+id/updateBookId"
        android:layout_width="366dp"
        android:layout_height="71dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center|start"
        android:hint="Id"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text=" fetch data"
        app:layout_constraintEnd_toEndOf="@+id/updateBookId"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/updateBookId"
        app:layout_constraintTop_toBottomOf="@+id/updateBookId" />

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Data"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fetchButton" />

    <EditText
        android:id="@+id/updatedBookId"
        android:layout_width="366dp"
        android:layout_height="78dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="Update Book Id"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/data" />

    <EditText
        android:id="@+id/updatedBookName"
        android:layout_width="366dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Update Book Name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/updatedBookId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updatedBookId"
        app:layout_constraintTop_toBottomOf="@+id/updatedBookId" />

    <EditText
        android:id="@+id/updatedBookPrice"
        android:layout_width="366dp"
        android:layout_height="73dp"
        android:ems="10"
        android:hint="Update Book Price"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/updatedBookName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updatedBookName"
        app:layout_constraintTop_toBottomOf="@+id/updatedBookName" />

    <EditText
        android:id="@+id/updatedBookAuthor"
        android:layout_width="366dp"
        android:layout_height="78dp"
        android:ems="10"
        android:hint="Update Book Author"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/updatedBookPrice"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/updatedBookPrice"
        app:layout_constraintTop_toBottomOf="@+id/updatedBookPrice" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/updatedBookAuthor"
        app:layout_constraintStart_toStartOf="@+id/updatedBookAuthor"
        app:layout_constraintTop_toBottomOf="@+id/updatedBookAuthor" />
</androidx.constraintlayout.widget.ConstraintLayout>