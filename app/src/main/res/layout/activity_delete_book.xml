<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteBook">

    <EditText
        android:id="@+id/bookIdForDelete"
        android:layout_width="273dp"
        android:layout_height="72dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Book ID"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/deleteSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/deleteSubmit"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_marginBottom="288dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bookIdForDelete"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/bookIdForDelete" />
</androidx.constraintlayout.widget.ConstraintLayout>